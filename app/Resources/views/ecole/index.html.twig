{% block menu %}

    {% if is_granted('ROLE_ADMIN_GENERAL') %}
        {% include'@App/Administration/Partials/_menu_admin.html.twig' %}
    {% endif %}
{% endblock %}

{% block contenuPrincipal %}
    <div class="row">
        <div class="col-lg-10 offset-1">
            <div class="card card-primary card-outline">
                <div class="card-body">
                    <div class="card-header">
                        <h5 class="m-0">Liste des ecoles</h5>
                    </div>
                    <table width="100%">
                        <thead>
                        <tr>

                            <th>Nom</th>

                            <th>Telephone</th>
                            <th>Mail</th>


                            <th>Censeur/referent</th>
                            <th>Conact : Censeur/referent</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ecole in ecoles %}
                            <tr>
                                {#<td><a href="{{ path('ecole_show', { 'id': ecole.id }) }}">{{ ecole.id }}</a></td>#}
                                <td>{{ ecole.nom }}</td>

                                <td>{{ ecole.telephone }}</td>
                                <td>{{ ecole.mail }}</td>


                                <td>{% if ecole.censeur %}{{ ecole.censeur.nom ~" "~ ecole.censeur.prenom }}{% endif %}</td>
                                <td>{% if ecole.censeur %}{{ ecole.censeur.telephone }}{% endif %}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('ecole_show', { 'id': ecole.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ecole_edit', { 'id': ecole.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

